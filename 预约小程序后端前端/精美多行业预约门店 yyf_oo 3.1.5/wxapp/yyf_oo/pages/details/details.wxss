    z-index: 99;
    background: white;
    border-radius: 10rpx;
}

.room_div {
    position: relative;
}

.room_content_div {
    width: 95%;
    text-align: center;
    margin: 20rpx auto;
}

.orderCode {
    width: 100%;
    margin-bottom: 15rpx;
}

.orderCode image {
    width: 500rpx;
    height: 500rpx;
}

.room_content_div text {
    font-size: 16px;
    color: #099fde;
    margin-top: 15rpx;
}

.close {
    position: absolute;
    top: 0rpx;
    right: 10rpx;
    width: 60rpx;
    height: 60rpx;
}

.close image {
    width: 60rpx;
    height: 60rpx;
}

.savebutton {
    background: #eb554d;
    color: white;
