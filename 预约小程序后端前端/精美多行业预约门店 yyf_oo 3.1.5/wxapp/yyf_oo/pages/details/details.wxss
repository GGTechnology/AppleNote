    color: white;
}

.indexBtn {
    width: 15%;
    padding: 20rpx 0;
    text-align: center;
    display: flex;
    flex-direction: column;
}

.indexBtn image {
    width: 37rpx;
    height: 37rpx;
}

.indexBtn_text {
    margin-top: -12rpx;
    color: #8f8f8f;
    font-size: 12px;
}

