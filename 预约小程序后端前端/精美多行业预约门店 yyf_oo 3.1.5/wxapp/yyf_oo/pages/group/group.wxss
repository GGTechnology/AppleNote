page {
    background: #f5f5f5;
}

.swiper {
    width: 100%;
    height: 200px;
}

image {
    width: 100%;
    height: 100%;
}

.details_top_bg {
    background: white;
    padding-top: 30rpx;
}

.p20 {
    padding: 0 30rpx;
}

.details_top {
    width: 90%;
    margin: 0 auto;
}

.details_price {
    margin-top: 15rpx;
    display: flex;
}

.details_desc_text {
    border-top: 1px solid #e5e5e5;
    margin-top: 25rpx;
    color: #8f8f8f;
    padding: 25rpx 0;
    font-size: 13px;
}

.lineprice {
    text-decoration: line-through;
    font-size: 15px;
    color: #ccc;
    margin: 7rpx 0 0 30rpx;
}

.details_content_bg {
    background: white;
    padding: 20rpx 0;
    color: #8f8f8f;
    padding-top: 20rpx;
}

.red {
    color: red;
}

.avatarview {
    display: flex;
    margin-top: 15rpx;
}

.avatarview view {
    margin-right: 15rpx;
}

.userinfo-avatar {
    width: 60rpx;
    height: 60rpx;
    border: 1px solid red;
    border-radius: 50%;
    margin: 0 auto;
}

.mark {
    border: 1px;
    border-style: dotted;
    border-color: red;
}

.buttonview {
    padding-bottom: 25rpx;
}

.buttonview button {
    color: white;
}

.addfriendbtn button {
    background-color: #ec6762;
}

.navindexbtn button {
    background-color: #f19e38;
    margin-top: 15rpx;
}