<template name="couponTitle">
    <view class="entitle2" wx:if="{{couponTitle.title_style=='2'}}">
        <view class="title_line2" style="border-color:{{couponTitle.tcolor}}"></view>
        <view class="center_title2" style="color:{{couponTitle.tcolor}}">
            <navigator url="{{couponTitle.url}}">{{couponTitle.name}}</navigator>
        </view>
        <view class="title_line2" style="border-color:{{couponTitle.tcolor}}"></view>
    </view>
    <view class="entitle" wx:if="{{couponTitle.title_style=='1'}}">
        <view class="title_line" style="border-color:{{couponTitle.tcolor}}"></view>
        <view class="center_title" style="color:{{couponTitle.tcolor}}">
            <navigator url="{{couponTitle.url}}">{{couponTitle.name}}</navigator>
        </view>
        <view class="title_line" style="border-color:{{couponTitle.tcolor}}"></view>
    </view>
    <view class="title" style="border-left-color:{{couponTitle.tcolor}}" wx:if="{{couponTitle.title_style=='0'}}">
        <view>{{couponTitle.name}}</view>
        <navigator url="{{couponTitle.url}}">
            <view class="more">MORE</view>
        </navigator>
    </view>
    <view class="title3 mb10" wx:if="{{couponTitle.title_style=='3'}}">
        <view class="title3_left">
            <view class="title3_left_border" style="border-left-color:{{couponTitle.tcolor}}"></view>
            <view class="title3_name">{{couponTitle.name}}</view>
        </view>
        <navigator url="{{couponTitle.url}}">
            <view class="more">MORE</view>
        </navigator>
    </view>
</template>
