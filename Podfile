source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '10.0'
use_frameworks!

target 'AppleNote' do
    
    # 有指定版本的才需要「,」隔开
    
    # 自动布局 https://github.com/SnapKit/SnapKit
    pod 'SnapKit', '~> 5.0.0'
    
    # HTTP 网络请求 https://github.com/Alamofire/Alamofire
    pod 'Alamofire', '~> 5.0.0-rc.2'
    
    # Json数据解析 https://github.com/SwiftyJSON/SwiftyJSON
    pod 'SwiftyJSON', '~> 4.0'
    
    # 网络图片下载&缓存 https://github.com/onevcat/Kingfisher
    pod 'Kingfisher', '~> 5.0'
    
    # 腾讯 BUG 统计 https://bugly.qq.com/docs/user-guide/instruction-manual-ios/?v=20200203205953
    pod 'Bugly'
    
end
